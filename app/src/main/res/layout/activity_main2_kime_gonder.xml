<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaa7"
    tools:context=".Main2Activity_kimeGonder">

    <Button
        android:id="@+id/ekleButonu"
        android:layout_width="90dp"
        android:layout_height="78dp"

        android:layout_centerHorizontal="true"
        android:background="@mipmap/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/kisiSecTextView"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="Göndermek İstediğiniz Kişiyi Seçin. "
        android:textColor="#ff7675"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"

        />

    <Button
        android:id="@+id/saatSecButton"
        android:layout_width="90dp"
        android:layout_height="78dp"

        android:layout_centerHorizontal="true"
        android:background="@mipmap/clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/saatSevTextView"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="Bir Saat Seçin. "
        android:textColor="#ff7675"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542"

        />

    <Button
        android:id="@+id/tarihSecButton"
        android:layout_width="90dp"
        android:layout_height="78dp"

        android:layout_centerHorizontal="true"
        android:background="@mipmap/calendar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

    <TextView
        android:id="@+id/tarihSecTextView"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="Bir Tarih Seçin. "
        android:textColor="#ff7675"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342"

        />

    <Button
        android:id="@+id/otomatikGonderButton"
        android:layout_width="63dp"
        android:layout_height="60dp"

        android:layout_centerHorizontal="true"
        android:background="@mipmap/time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/mesajYazTextView"
        android:layout_width="408dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="28dp"
        android:clickable="true"
        android:gravity="center"
        android:hint="Buraya mesajınızı yazın...."
        android:lineSpacingMultiplier="1.5"
        android:textColor="#ff7675"

        android:textColorHint="#ff7675"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625"

        />

    <Button
        android:id="@+id/hazirMesajlariGorButonu"
        android:layout_width="165dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:background="#ffeaa7"
        android:text="Uygulamada Mevcut Bulunan Mesajlar"
        android:textAllCaps="true"

        android:textColor="#ff7675"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />


</androidx.constraintlayout.widget.ConstraintLayout>